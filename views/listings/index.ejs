<% layout("/layouts/boilerplate")%>
    <div id="filters" class="mt-4 mb-5">
        <div class="filter">
            <div><img src="/icons/trending.png" alt="" style="width: 2rem;"></div>
            <p>Trending</p>
        </div>
        <div class="filter">
            <div><img src="/icons/room.png" alt="" style="width: 2rem;" class=""></div>
            <p>Rooms</p>
        </div>
        <div class="filter">
            <div><img src="/icons/beach.png" alt="" style="width: 2rem;"></div>
            <p>Beach</p>
        </div>
        <div class="filter">
            <div><img src="/icons/mountain.png" alt="" style="width: 2rem;"></div>
            <p>Mountain</p>
        </div>
        <div class="filter">
            <div><img src="/icons/lake.png" alt="" style="width: 2rem;"></div>
            <p>Lake</p>
        </div>
        <div class="filter">
            <div><img src="/icons/pool.png" alt="" style="width: 2rem;"></div>
            <p>Pool</p>
        </div>
        <div class="tax-switch">
            <div class="form-check-reverse form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked" unchecked>
                <label class="form-check-label" for="flexSwitchCheckChecked">Display Total After Taxes</label>
            </div>
        </div>
    </div>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">      
        <%for(listings of all_Listings){%>
            <a href="/listings/<%=listings._id%>" class="card-image" data-category="<%=listings.category%>">
                <div class="card col listing-card">
                    <img src="<%=listings.image.url%>" class="card-img-top" alt="listing_image" style="height: 20rem;">
                    <div class="card-body">
                        <p class="card-text">
                            <b>
                                <%=listings.title%>
                            </b><br>
                            <b>&#x20B9; <%=listings.price.toLocaleString('en-in')%></b> / night
                            <i class="tax-info">&nbsp; &nbsp;+ 18% GST</i>
                        </p>
                    </div>
                </div>
            </a>
            <%}%>
    </div>
    <script>
        let taxSwitch = document.getElementById("flexSwitchCheckChecked");
        taxSwitch.addEventListener("click", () => {
            let showTax = document.getElementsByClassName("tax-info");
            for (info of showTax) {
                if (info.style.display == "inline") {
                    info.style.display = "none"
                }
                else {
                    info.style.display = "inline"
                }
            }
        })
        document.getElementById("filters").addEventListener("click", function (event) {
            let target = event.target.closest(".filter"); // Find the closest `.filter` div
            if (!target) return; // Exit if clicked outside a filter
            let category = target.querySelector("p").textContent.trim(); // Get category name
            console.log("Clicked category:", category);
            let listings=document.querySelectorAll(".card-image");
            // console.log(listings);
            for(listing of listings){
                let listingCatogery=listing.dataset.category;
                if(category!=listingCatogery){
                    listing.style.display="none";
                }
                else{
                    listing.style.display="block"
                }                
            }
        });

    </script>
