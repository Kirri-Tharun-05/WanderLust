<% layout("/layouts/boilerplate")%>
<style>
    #filters{
        display: flex;
        flex-wrap: wrap;
        
    }
    .filter
    {
        text-align: center;
        margin-right: 1.5rem;
        opacity: 0.7;
        transition: 0.2s ;
    }
    .filter:hover{
        opacity: 1;
        cursor: pointer;
    }
</style>
<div id="filters" class="mt-3 ">
    <div class="filter">
        <div><i class="fa-solid fa-fire"></i></div>
        <p>Trending</p>
    </div>
    <div class="filter">
        <div><i class="fa-solid fa-bed"></i></div>
        <p>Rooms</p>
    </div>
</div>
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">

    <%for(listings of all_Listings){%>
        <a href="/listings/<%=listings._id%>" class="card-image">
        <div class="card col listing-card">
            <img src="<%=listings.image.url%>" class="card-img-top" alt="listing_image" style="height: 20rem;">
            <!-- <div class="card-img-overlay">wandarlust</div> -->
            <div class="card-body">
                <p class="card-text">
                    <b><%=listings.title%></b><br>
                    &#x20B9;<%=listings.price.toLocaleString('en-in')%> / night
                </p>
            </div>
          </div>
        </a>
    <%}%>
</div>

   
